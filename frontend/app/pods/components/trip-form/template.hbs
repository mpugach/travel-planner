{{#paper-form onSubmit=onSubmit as |form|}}
  <div class="layout-column">
    {{form.input
      label="Destination"
      value=trip.destination
      required=true
      onChange=(action (mut trip.destination))
    }}

    {{paper-pikaday
      label="Start date"
      value=trip.startDate
      required=true
      onChange=(action (mut trip.startDate))
    }}

    {{paper-pikaday
      label="End date"
      value=trip.endDate
      required=true
      onChange=(action (mut trip.endDate))
    }}

    {{simditor-editor
      name="comment"
      value=trip
      editor=(mut editor)
      update=(action (mut trip.comment))
      placeholder="Trip comment"
    }}

    {{#form.submit-button raised=true primary=true}}{{submitLabel}}{{/form.submit-button}}
  </div>
{{/paper-form}}
