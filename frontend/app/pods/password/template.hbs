<div class="layout-column layout-align-center height-70">
  <div class="layout-row layout-align-center">
    <h1>Password change</h1>
  </div>

  <div class="layout-row layout-align-center">
    <div class="flex-xs-90 flex-sm-55 flex-md-40 flex-30">
      {{#paper-form onSubmit=(action "saveModel") as |form|}}
        <div class="layout-column">
          {{form.input
            type="password"
            label="Password"
            value=model.password
            errors=model.validations.attrs.password.messages
            required=true
            onChange=(action (mut model.password))
          }}

          {{form.input
            type="password"
            label="Password confirmation"
            value=model.passwordConfirmation
            errors=model.validations.attrs.passwordConfirmation.messages
            required=true
            onChange=(action (mut model.passwordConfirmation))
          }}

          {{#form.submit-button raised=true primary=true}}Change{{/form.submit-button}}
        </div>
      {{/paper-form}}
    </div>
  </div>
</div>

